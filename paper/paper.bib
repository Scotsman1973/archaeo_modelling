pages = {e3093--e3093},
volume = {5},
publisher = {PeerJ. Ltd},
year = {2017},
title = {MaxEnt's parameter configuration and small samples: are we paying attention to recommendations? A systematic review},
copyright = {COPYRIGHT 2017 COPYRIGHT 2012-2015 PeerJ, Inc / Public user content licensed CC-BY 4.0 unless otherwise specified. Content is available for free at https://peerj.com},
language = {eng},
address = {United States},
author = {Morales, Narkis S and Fernández, Ignacio C and Baca-González, Victoria},
keywords = {Analysis ; Animal behavior ; Auto-features ; Biogeography ; Computational Biology ; Conservation Biology ; Ecology ; Ecosystem Science ; Environmental niche modelling ; Landscape ecology ; Opiliones ; Parameters configuration ; Regularization multiplier ; Researchers ; Reviews ; Species ; Species distribution ; Studies ; User-defined features},
