volume = {4},
publisher = {Ubiquity Press},
number = {1},
year = {2021},
title = {An Explorative Application of Random Forest Algorithm for Archaeological Predictive Modeling. A Swiss Case Study},
language = {eng},
author = {Castiello, Maria Elena and Tonini, Marj},
keywords = {canton of zurich ; cultural heritage management ; locational patterns ; machine learning ; roman settlements},
}

