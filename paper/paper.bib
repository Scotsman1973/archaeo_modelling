language = {eng},
address = {Oxford},
author = {Barber, Robert A. and Ball, Stuart G. and Morris, Roger K. A. and Gilbert, Francis},
keywords = {Bias ; Centroids ; citizen science ; Error correction ; Explicit knowledge ; Geographical distribution ; Human population density ; Human populations ; Land use ; Maxent ; METHOD ; Population density ; presence‐only data ; Recording ; Sampling ; sampling bias ; Species ; species distribution modelling ; Syrphidae ; target‐group background ; Travel time},
